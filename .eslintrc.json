{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "env": {
        "mocha": true
    },
    "rules": {
        "no-plusplus": [
            "error",
            {"allowForLoopAfterthoughts": true}
        ],
        "linebreak-style": "off",
        "no-console": "off",
        "max-len": "off",
        "consistent-return": "off",
        "no-use-before-define": "off",
        "padded-blocks": "off"
    }
}
